<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_exibicaofornc"
    android:padding="16dp">

    <TextView
        android:id="@+id/nomePJ"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/nome"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="160dp"
        android:layout_height="12dp"
        android:layout_below="@id/nomePJ"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="8dp"
        android:textColor="@color/gray"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/telefone"
        android:layout_width="120dp"
        android:layout_height="12dp"
        android:layout_below="@id/email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/icon_telefone"
        android:drawablePadding="8dp"
        android:textColor="@color/gray"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/insumo"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/telefone"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginStart="150dp" />

    <TextView
        android:id="@+id/preco"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/nomePJ"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rotulo_produto_comprado"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@id/insumo"
        android:layout_alignStart="@id/insumo"
        android:layout_marginTop="-20dp"
        android:text="Produto Comprado"
        android:textColor="@color/gray"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/rotulo_valor"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@id/preco"
        android:layout_alignStart="@id/preco"
        android:layout_marginTop="-15dp"
        android:text="Valor por tonelada"
        android:textColor="@color/gray"
        android:textSize="8sp" />

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/iconeditar"
        android:contentDescription="Editar Fornecedor"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"/>
</RelativeLayout>
